            </ul>
        </nav>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
          <button type="button" class="hamburger is-closed animated fadeInLeft" data-toggle="offcanvas">
            <span class="hamb-top"></span>
            <span class="hamb-middle"></span>
            <span class="hamb-bottom"></span>
          </button>
            <div>
                <h3>话题抽取（关键字提取+热力值计算）任务参数选取</h3>
                <div>
                    <form class="form-horizontal" id="keyhotsnameOrder" role="form">
                      <div class="form-group">
                          <label>请选择待抽取批次(格式：批次号 聚类批次 聚类任务时间 新闻总数 类别数量 来源网站)</label>
                           <select id="his_select" name="todo_keyhots" class="form-control">
                                <% for(var i=0;i<data.length;i++){ %>
                                <option value="<%= data[i].web + '_' +data[i].news_scrapy_batch %>">
                                    <%= data[i].news_scrapy_batch %>    <%= data[i].clusterbatch %>    <%= data[i].datetime %>  <%= data[i].amount %>   <%= data[i].categorynum %>    <%= data[i].web %>
                                </option>
                            <% } %>
                           </select>
                          <label>请输入关键词数量（默认为10)</label>
                          <input type="text" class="form-control" name="keywords_num" id="keywords_num" value="10">
                          <button type="button" id="news_keyhots" class="btn btn-default btn-lg btn-block">抽取/计算</button>
                      </div>

                    </form>
                </div>
            </div>

            <div class="table">
                <table class="table table-striped table-hover" id="tabDetails"></table>
                <div class="table-pagination" >
                    <div id="page_box">
                        <button id="prev">prev</button>
                        <span id="pages"></span>
                        <button id="next">next</button>
                    </div>
                </div>
                </div>

         </div>

        </div>
